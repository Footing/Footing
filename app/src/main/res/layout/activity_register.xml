<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="false"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:background="@color/white"
              android:theme="@style/LoginLayoutTheme"
              tools:context="team.far.footing.ui.activity.RegisterActivty">

    <include layout="@layout/layout_toolbar"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed_register_user_name"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:hint="请输入帐号"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="12"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="6dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:textColorLink="@color/secondary_text"
        android:textSize="16sp"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed_register_password"
        android:layout_below="@+id/ed_register_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:gravity="bottom"
        android:hint="请输入密码"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="6dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:textColorLink="@color/secondary_text"
        android:textSize="16sp"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed_register_password_repeat"
        android:layout_below="@+id/ed_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:gravity="bottom"
        android:hint="请重复密码"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="6dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:textColorLink="@color/secondary_text"
        android:textSize="16sp"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed_register_email"
        android:layout_below="@id/ed_register_password_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="bottom"
        android:hint="请输入邮箱"
        android:imeOptions="actionGo"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="6dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:textColorLink="@color/secondary_text"
        android:textSize="16sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        card_view:cardBackgroundColor="@color/primary_color"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </android.support.v7.widget.CardView>

    <!--toolbar下方阴影-->
    <View
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow_height"
        android:background="@drawable/shadow"/>

</RelativeLayout>