<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:mrl_rippleColor="@color/background_material_light"
    app:mrl_rippleDuration="500">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <team.far.footing.ui.widget.CircleImageView
            android:id="@+id/item_image_friend"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_user_pic_default" />

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_image_friend"
                android:layout_toLeftOf="@+id/item_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                tools:text="name"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_tv_distance"
                android:layout_marginRight="22dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/secondary_text"
                tools:text="distance"
                android:textSize="14sp" />

    </RelativeLayout>

</com.balysv.materialripple.MaterialRippleLayout>