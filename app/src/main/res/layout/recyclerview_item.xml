<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <team.far.footing.ui.widget.CircleImageView
        android:id="@+id/item_image_friend"
        android:layout_marginTop="8dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_user_pic_default" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_image_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            tools:text="name"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_name"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/secondary_text"
            tools:text="distance"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>