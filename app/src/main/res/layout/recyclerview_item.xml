<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <team.far.footing.ui.widget.CircleImageView
        android:id="@+id/item_image_friend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_user_pic_default" />

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/item_image_friend"
        android:text="name"
        android:textColor="@color/switch_thumb_disabled_material_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_image_friend"
        android:layout_marginTop="3dp"
        android:textColor="@color/switch_thumb_disabled_material_dark"
        android:text="distance"
        android:textSize="16sp" />
</RelativeLayout>