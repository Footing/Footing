<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.far.footing.ui.fragment.TodayFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/CV_fg_today"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            card_view:cardBackgroundColor="@color/light_white"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_tt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="今日行走路程："
                    android:textColor="@color/switch_thumb_disabled_material_dark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_today_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tt"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:text="0m"
                    android:textColor="@color/primary_color"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_Is_finish_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_today_distance"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:text="还没有完成任务"
                    android:textColor="@color/switch_thumb_disabled_material_dark"
                    android:textSize="20sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_fg_friends"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/CV_fg_today"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/light_white"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp">

                <Spinner
                    android:id="@+id/spinner_fg_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:entries="@array/spinner_array_string" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner_fg_today" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</FrameLayout>
