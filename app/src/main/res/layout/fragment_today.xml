<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="team.far.footing.ui.fragment.TodayFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_friends_status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="好友状态"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_fg_friends"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp">

            <include layout="@layout/view_progress"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">

                <Spinner
                    android:id="@+id/spinner_fg_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:entries="@array/spinner_array_string"
                    android:textSize="16sp"
                    android:theme="@style/SpinnerTheme"/>

                <TextView
                    android:id="@+id/tv_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="好友排名"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner_fg_today"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="12dp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_my_status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="我的状态"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/CV_fg_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@color/background_material_light"/>

                <!--     <TextView
                         android:id="@+id/tv_tt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="22dp"
                         android:gravity="center"
                         android:text="行走路程"
                         android:textColor="@color/primary_text"
                         android:textSize="16sp" />-->

                <TextView
                    android:id="@+id/tv_today_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/accent_color"
                    android:textSize="18sp"
                    tools:text="0 m"/>

                <!--         <TextView
                             android:id="@+id/tv_mission_status"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_below="@+id/tv_tt"
                             android:layout_marginLeft="22dp"
                             android:text="任务情况"
                             android:layout_marginTop="30dp"
                             android:textColor="@color/primary_text"
                             android:textSize="16sp" />-->

                <TextView
                    android:id="@+id/tv_Is_finish_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_today_distance"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="30dp"
                    android:text="未完成任务"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>
