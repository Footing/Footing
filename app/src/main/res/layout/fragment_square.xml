<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             tools:context="team.far.footing.ui.fragment.SquareFragment">

    <ImageView
        android:id="@+id/iv_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_square_working"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_square_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广场施工中"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/iv_square"
        android:textSize="36sp"
        android:textColor="@color/square_black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_square_sub_title"
        android:layout_below="@+id/tv_square_title"
        android:text="敬请期待"
        android:textSize="28sp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/square_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
