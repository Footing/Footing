<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="team.far.footing.ui.activity.WalkActivity">

    <include layout="@layout/layout_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/map_walk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />
        <!--toolbar下方阴影-->
        <View
            android:layout_width="match_parent"
            android:background="@drawable/shadow"
            android:layout_height="@dimen/toolbar_shadow_height"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_walk_status"
            android:visibility="invisible"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="142dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            card_view:cardBackgroundColor="#E6ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="本次步行"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_walk_distance"
                    android:textSize="18sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还在酝酿中~"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_walk_start"
                android:layout_gravity="center"
                android:src="@mipmap/ic_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_walk_pause"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@mipmap/ic_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_walk_stop"
                android:visibility="gone"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
