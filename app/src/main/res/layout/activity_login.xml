<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_floating_material_light"
                android:clipToPadding="false"
                android:fitsSystemWindows="true"
                android:theme="@style/LoginLayoutTheme"
                tools:context="team.far.footing.ui.activity.RegisterActivty">


    <android.support.v7.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="16dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@mipmap/image_title"/>

            <EditText
                android:id="@+id/ed_login_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_login_title"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="42dp"
                android:hint="@string/user_name"
                android:maxLength="12"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed_login_user_name"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="20dp"
                android:hint="@string/password"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:maxLength="12"
                android:maxLines="1"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:textColorLink="@color/secondary_text"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_login_login"
                android:layout_below="@+id/ed_login_password"
                android:text="@string/register"
                android:padding="12dp"
                android:textColor="@color/primary_color"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/btn_login_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ed_login_password"
                android:layout_marginRight="16dp"
                android:text="@string/login"
                android:padding="12dp"
                android:textColor="@color/primary_color"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/btn_qq_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ed_login_password">

                <ImageView
                    android:id="@+id/iv_qq_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp"
                    android:src="@mipmap/image_qq_login"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:layout_toRightOf="@+id/iv_qq_login"
                    android:text="QQ登录"
                    android:textColor="@color/accent_color"
                    android:textSize="16sp"/>
            </RelativeLayout>

<!--            <TextView
                android:id="@+id/tv_login_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_login_version"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="28dp"
                android:text="@string/forget_password"
                android:textColor="@color/accent_color"/>-->


            <TextView
                android:id="@+id/tv_login_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:textColor="@color/divider_color"
                android:textSize="16sp"
                tools:text="Ver.1.0"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
