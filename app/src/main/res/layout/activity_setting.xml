<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="team.far.footing.ui.activity.SettingActivity">

    <include layout="@layout/layout_toolbar"/>

    <!--toolbar下方阴影-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow_height"
        android:background="@drawable/shadow"/>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/btn_setting_GPS_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/divider_color"
        app:mrl_rippleDuration="500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:text="检查GPS"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>
    </com.balysv.materialripple.MaterialRippleLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_floating_material_light"
        />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/btn_setting_clean_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/divider_color"
        app:mrl_rippleDuration="500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:text="清理缓存"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>
    </com.balysv.materialripple.MaterialRippleLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_floating_material_light"
        />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/btn_setting_allow_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/divider_color"
        app:mrl_rippleDuration="500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:text="不接受推送"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>
    </com.balysv.materialripple.MaterialRippleLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_floating_material_light"
        android:layout_weight="1"
        />

    <FrameLayout
        android:background="@color/primary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/btn_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/primary_light_color"
        app:mrl_rippleDuration="500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </com.balysv.materialripple.MaterialRippleLayout>
    </FrameLayout>


</LinearLayout>
