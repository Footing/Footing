<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--内容布局部分-->

        <LinearLayout
            android:id="@+id/home_bar"
            android:background="@color/primary_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_home_toolbar"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:background="@color/primary_color"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_material_light">
                </android.support.v4.view.ViewPager>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabBtn_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/codelab_fab_margin_bottom"
                        android:layout_marginRight="@dimen/codelab_fab_margin_right"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp"
                        app:borderWidth="0dp"
                        android:layout_gravity="bottom|right"
                        android:src="@mipmap/ic_run"
                        app:fabSize="normal" />
                </FrameLayout>
                <!--toolbar下方阴影-->
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/shadow"
                    android:layout_height="@dimen/toolbar_shadow_height"/>
            </RelativeLayout>

        </LinearLayout>

        <!--抽屉布局部分-->
        <!--因为这个新玩意儿顶部是一定会空一个状态栏高度的，我先随便让它margin上移26dp，再padding下移26dp，之后测试其他机型-->
        <android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:layout_marginTop="-26dp"
            android:paddingTop="26dp"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/layout_home_nav_header"
            app:itemIconTint="@color/secondary_text"
            app:itemTextColor="@color/primary_text"
            app:menu="@menu/navigation_home_drawer_items"/>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>